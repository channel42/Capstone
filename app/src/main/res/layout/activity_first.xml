<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kimji.helper_fourth.FirstActivity">

    <Space
        android:layout_width="20px"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space"
        android:background="@color/highlighted_text_material_dark"
        android:backgroundTint="@color/accent_material_dark"
        android:foreground="@color/accent_material_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="계획 추가하기"
        android:id="@+id/button3"
        android:background="#ddd0dd"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="내 계획 보기"
        android:id="@+id/button4"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ddd0dd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="번역할 언어 : "
        android:id="@+id/textView6"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/spinner3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_alignRight="@+id/spinner3"
        android:layout_alignEnd="@+id/spinner3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView11"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/spinner3"
        android:layout_alignEnd="@+id/spinner3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번역하기"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/space"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
